<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0" bindingId="fyta"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="account">
		<label>Fyta Account</label>
		<description>This bridge represents the gateway to Fyta Account</description>
		<category>WebService</category>
		<config-description-ref uri="thing-type:fyta:account"/>
	</bridge-type>

	<thing-type id="plant">
		<supported-bridge-type-refs>
			<bridge-type-ref id="account"/>
		</supported-bridge-type-refs>

		<label>Fyta Beam Plant Sensor</label>
		<description>Fyta Beam Plant Sensor reports temperature, light, soil moisture and salinity. The sensor must be
			connected to Fyta via a Fyta hub.</description>
		<category>Garden</category>

		<channels>
			<channel id="nickname" typeId="nickname"/>
			<channel id="thumbnail" typeId="thumbnail"/>

			<channel id="temperature-status" typeId="temperature-status"/>
			<channel id="temperature" typeId="temperature"/>
			<channel id="temperature-min-acceptable" typeId="temperature-min-acceptable"/>
			<channel id="temperature-min-good" typeId="temperature-min-good"/>
			<channel id="temperature-max-good" typeId="temperature-max-good"/>
			<channel id="temperature-max-acceptable" typeId="temperature-max-acceptable"/>

			<channel id="light-status" typeId="light-status"/>
			<channel id="light" typeId="light"/>

			<channel id="moisture-status" typeId="moisture-status"/>
			<channel id="moisture" typeId="moisture"/>
			<channel id="moisture-min-acceptable" typeId="moisture-min-acceptable"/>
			<channel id="moisture-min-good" typeId="moisture-min-good"/>
			<channel id="moisture-max-good" typeId="moisture-max-good"/>
			<channel id="moisture-max-acceptable" typeId="moisture-max-acceptable"/>

			<channel id="nutrients-status" typeId="nutrients-status"/>

			<channel id="salinity-status" typeId="salinity-status"/>
			<channel id="salinity" typeId="salinity"/>
			<channel id="salinity-min-acceptable" typeId="salinity-min-acceptable"/>
			<channel id="salinity-min-good" typeId="salinity-min-good"/>
			<channel id="salinity-max-good" typeId="salinity-max-good"/>
			<channel id="salinity-max-acceptable" typeId="salinity-max-acceptable"/>

			<channel id="last-updated" typeId="last-updated"/>
			<channel id="battery" typeId="battery"/>
		</channels>


		<representation-property>macAddress</representation-property>
		<config-description-ref uri="thing-type:fyta:plant"/>
	</thing-type>

	<channel-type id="nickname">
		<item-type>String</item-type>
		<label>User given plant name</label>
		<category>Garden</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="thumbnail">
		<item-type>Image</item-type>
		<label>Thumbnail image of plant</label>
		<category>Garden</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="temperature-status">
		<item-type>String</item-type>
		<label>Temperature status</label>
		<category>QualityOfService</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="temperature">
		<item-type>Number:Temperature</item-type>
		<label>Temperature average last hour</label>
		<category>Temperature</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="temperature-min-acceptable">
		<item-type>Number:Temperature</item-type>
		<label>Minimum acceptable temperature for plant. Keep above</label>
		<category>Temperature</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="temperature-min-good">
		<item-type>Number:Temperature</item-type>
		<label>Minimum "good" temperature for plant</label>
		<category>Temperature</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="temperature-max-good">
		<item-type>Number:Temperature</item-type>
		<label>Maximum "good" temperature for plant</label>
		<category>Temperature</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="temperature-max-acceptable">
		<item-type>Number:Temperature</item-type>
		<label>Maximum acceptable temperature for plant. Keep below.</label>
		<category>Temperature</category>
		<state readOnly="true"/>
	</channel-type>



	<channel-type id="light-status">
		<item-type>String</item-type>
		<label>Light status</label>
		<category>QualityOfService</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="light">
		<item-type>Number</item-type>
		<label>Amount of sunlight Î¼mol last hour</label>
		<category>Sun</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="nutrients-status">
		<item-type>String</item-type>
		<label>Nutrients status</label>
		<category>QualityOfService</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="moisture-status">
		<item-type>String</item-type>
		<label>Moisture status</label>
		<category>QualityOfService</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="moisture">
		<item-type>Number:Dimensionless</item-type>
		<label>Measured water content average last hour</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="moisture-min-acceptable">
		<item-type>Number:Dimensionless</item-type>
		<label>Minimum acceptable soil moisture for plant. Keep above</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="moisture-min-good">
		<item-type>Number:Dimensionless</item-type>
		<label>Minimum "good" soil moisture for plant</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="moisture-max-good">
		<item-type>Number:Dimensionless</item-type>
		<label>Maximum "good" soil moisture for plant</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="moisture-max-acceptable">
		<item-type>Number:Dimensionless</item-type>
		<label>Maximum acceptable soil moisture for plant. Keep below.</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>


	<channel-type id="salinity-status">
		<item-type>String</item-type>
		<label>Salinity status</label>
		<category>QualityOfService</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="salinity">
		<item-type>Number</item-type>
		<label>Measured soil salinity mS average last hour</label>
		<category>Water</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="salinity-min-acceptable">
		<item-type>Number</item-type>
		<label>Minimum acceptable soil salinity for plant. Keep above</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="salinity-min-good">
		<item-type>Number</item-type>
		<label>Minimum "good" soil salinity for plant</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="salinity-max-good">
		<item-type>Number</item-type>
		<label>Maximum "good" soil salinity for plant</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="salinity-max-acceptable">
		<item-type>Number</item-type>
		<label>Maximum acceptable soil salinity for plant. Keep below.</label>
		<category>Humidity</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="battery">
		<item-type>Number:Dimensionless</item-type>
		<label>Battery</label>
		<category>BatteryLevel</category>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="last-updated">
		<item-type>DateTime</item-type>
		<label>Last reported sensor data</label>
		<category>Time</category>
		<state readOnly="true" pattern="%1$tY-%1$tm-%1$td %1$tH:%1$tM:%1$tS"/>
	</channel-type>


</thing:thing-descriptions>
